<% @bookmarks.each do |bookmark| %>
  <div class="card-product my-1">
    <img src=<%= bookmark.movie.poster_url%>>
    <div class="card-product-infos">
      <h2><%= bookmark.movie.title%></h2>
      <p>Comments: <%= bookmark.comment %></p>
      <%= link_to "Delete this Bookmark", bookmark_path(bookmark), method: :delete, class: "btn btn-danger my-1" %>
    </div>
  </div>
<% end %>
